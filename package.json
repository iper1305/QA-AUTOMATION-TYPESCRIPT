{
  "name": "QA_AUTOMATION",
  "version": "1.0.0",
  "description": "QA_AUTOMATION_PROJECT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run lint && tsc --build",
    "debug:nix": "cross-env NODE_OPTIONS='$NODE_OPTIONS --experimental-vm-modules' jest",
    "debug:win": "set NODE_OPTIONS=%NODE_OPTIONS% --experimental-vm-modules && jest",
    "test": "mocha --require ts-node/register tests/**/*.spec.ts",
    "test:consumer": "mocha --require ts-node/register src/homework_13/pet-store-api/tests/consumer/**/*.spec.ts",
    "test:provider": "mocha --require ts-node/register src/homework_13/pet-store-api/tests/provider/**/*.spec.ts",
    "test:base": "mocha -r ts-node/register base-classes.spec.ts",
    "test:instruments": "mocha -r ts-node/register instruments.spec.ts",
    "test:integration": "mocha -r ts-node/register integration.spec.ts",
    "allure:generate": "allure generate allure-results -o allure-report --clean",
    "allure:open": "allure open allure-report"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@pact-foundation/pact": "^10.0.0",
    "@shelex/cypress-allure-plugin": "^2.40.0",
    "allure-commandline": "^2.24.0",
    "axios": "^1.6.0",
    "chromedriver": "^114.0.0",
    "cypress": "^13.5.0",
    "dotenv": "^16.4.7",
    "eslint-plugin-unicorn": "^56.0.1",
    "node-fetch": "^3.3.2",
    "selenium-webdriver": "^4.8.0",
    "tslog": "^4.9.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@stylistic/eslint-plugin": "^3.0.0",
    "@stylistic/eslint-plugin-ts": "^3.0.0",
    "@types/chai": "^5.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "@types/selenium-webdriver": "^4.1.28",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "chai": "^5.2.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "esrun": "^3.2.26",
    "globals": "^15.14.0",
    "mocha": "^11.1.0",
    "prettier": "^3.4.2",
    "puppeteer": "^24.4.0",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  }
}
